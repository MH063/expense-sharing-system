# 开发环境配置文件
# 此文件包含开发环境的默认配置，不应包含真实密码
# 真实密码应在本地 .env 文件中设置

# 当前环境标识
NODE_ENV=development

# 数据库配置 - 开发环境默认值
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=development_password_placeholder  # 在本地 .env 文件中覆盖此值
DB_NAME=expense_dev

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT配置
JWT_SECRET=dev_jwt_secret_placeholder
JWT_REFRESH_SECRET=dev_refresh_secret_placeholder
JWT_EXPIRES_IN=24h

# 应用端口
PORT=4000

# 日志级别
LOG_LEVEL=debug

# API速率限制（每分钟请求数）
API_RATE_LIMIT=100

# 文件上传限制（MB）
MAX_FILE_SIZE=10

# 安全配置
ENABLE_CORS_ALL=true
ENABLE_RATE_LIMITING=false  # 开发环境可关闭限流