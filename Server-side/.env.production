# 生产环境配置文件
# 此文件不应包含真实密码，真实密码应在部署环境设置

# 当前环境标识
NODE_ENV=production

# 数据库配置 - 生产环境
DB_HOST=production_db_host
DB_PORT=5432
DB_USER=production_user
DB_PASSWORD=production_password_placeholder  # 在部署环境设置真实值
DB_NAME=expense_prod

# Redis配置
REDIS_HOST=production_redis_host
REDIS_PORT=6379

# JWT配置 - 必须使用强密钥
JWT_SECRET=production_jwt_secret_placeholder
JWT_REFRESH_SECRET=production_refresh_secret_placeholder
JWT_EXPIRES_IN=24h

# 应用端口
PORT=4000

# 日志级别
LOG_LEVEL=info

# API速率限制（每分钟请求数）
API_RATE_LIMIT=60

# 文件上传限制（MB）
MAX_FILE_SIZE=5

# 安全配置
ENABLE_CORS_ALL=false
ENABLE_RATE_LIMITING=true

# SSL配置
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=false