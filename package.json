{
  "name": "expense-sharing-system",
  "version": "1.0.0",
  "description": "寝室费用分摊记账系统 - 完整部署版本",
  "type": "module",
  "scripts": {
    "install:all": "npm run install:server && npm run install:client && npm run install:admin",
    "install:server": "cd Server-side && npm install",
    "install:client": "cd \"Client application\" && npm install",
    "install:admin": "cd \"Admin panel\" && npm install",
    "build:all": "npm run build:client && npm run build:admin",
    "build:client": "cd \"Client application\" && npm run build",
    "build:admin": "cd \"Admin panel\" && npm run build",
    "start:prod": "cd Server-side && npm run prod",
    "zeabur:init": "cd Server-side && npm run zeabur:init",
    "zeabur:deploy": "npm run zeabur:init && npm run start:prod",
    "dev": "concurrently \"cd Server-side && npm run dev\" \"cd \"Client application\" && npm run dev\" \"cd \"Admin panel\" && npm run dev\"",
    "test:integration": "cd Server-side && npm run test:integration",
    "docs:check": "cd Server-side && npm run docs:check"
  },
  "devDependencies": {
    "@pinia/testing": "^1.0.3",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "@vue/test-utils": "^2.4.6",
    "codebuddy": "^1.0.0",
    "concurrently": "^9.1.2",
    "jsdom": "^27.1.0",
    "vitest": "^4.0.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "marked": "^16.4.1"
  }
}
