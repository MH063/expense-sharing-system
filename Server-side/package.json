{
  "name": "expense-sharing-system",
  "version": "1.0.0",
  "description": "寝室费用分摊记账系统",
  "main": "server.js",
  "scripts": {
    "start": "chcp 65001 >nul && set NODE_ENV=production && node server.js",
    "dev": "chcp 65001 >nul && set NODE_ENV=development && nodemon server.js",
    "prod": "chcp 65001 >nul && set NODE_ENV=production && node server.js",
    "test": "chcp 65001 >nul && set NODE_ENV=test && jest",
    "test:integration": "chcp 65001 >nul && set NODE_ENV=test && jest --testPathPattern=integration",
    "docs:check": "node scripts/docs-consistency-check.js",
    "test:watch": "chcp 65001 >nul && set NODE_ENV=test && jest --watch",
    "test:coverage": "chcp 65001 >nul && set NODE_ENV=test && jest --coverage",
    "test:db": "chcp 65001 >nul && set NODE_ENV=test && jest --testPathPattern=database",
    "test:unit": "chcp 65001 >nul && set NODE_ENV=test && jest --testPathPattern=unit",
    "test:mocha": "chcp 65001 >nul && set NODE_ENV=development && mocha tests/**/*.test.js",
    "test:bruteforce": "chcp 65001 >nul && set NODE_ENV=development && node test/brute-force-test.js",
    "test:bruteforce:unit": "chcp 65001 >nul && set NODE_ENV=test && mocha test/brute-force-protection.test.js",
    "test:bruteforce:integration": "chcp 65001 >nul && set NODE_ENV=test && mocha test/integration/brute-force-integration.test.js",
    "create:testdb": "chcp 65001 >nul && set NODE_ENV=test && node scripts/create-test-database.js",
    "init:testdb": "psql -U postgres -d test_expense_system -f scripts/init-test-database.sql",
    "init:proddb": "psql -U postgres -d prod_expense_system -f scripts/init-prod-database.sql",
    "init:database:dev": "chcp 65001 >nul && node scripts/init-database.js development",
    "init:database:test": "chcp 65001 >nul && node scripts/init-database.js test",
    "init:database:prod": "chcp 65001 >nul && node scripts/init-database.js production",
    "create:schema": "node scripts/create-database-schema.js",
    "schema:dev": "chcp 65001 >nul && node scripts/create-database-schema.js --env development",
    "schema:test": "chcp 65001 >nul && node scripts/create-database-schema.js --env test",
    "schema:prod": "chcp 65001 >nul && node scripts/create-database-schema.js --env production",
    "schema:examples": "chcp 65001 >nul && node scripts/database-schema-creator-examples.js",
    "zeabur:init": "chcp 65001 >nul && node scripts/zeabur-init.js",
    "zeabur:deploy": "chcp 65001 >nul && npm run zeabur:init && npm start"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "decimal.js": "^10.6.0",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "geoip-lite": "^1.4.10",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "node-vault": "^0.10.9",
    "nodemailer": "^7.0.10",
    "pdfkit": "^0.17.2",
    "pg": "^8.11.3",
    "redis": "^4.6.7",
    "sequelize": "^6.37.7",
    "twilio": "^5.10.4",
    "uuid": "^13.0.0",
    "winston": "^3.10.0",
    "ws": "^8.13.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "axios": "^1.13.2",
    "chai": "^4.5.0",
    "colors": "^1.4.0",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "jest": "^29.7.0",
    "mocha": "^10.8.2",
    "nodemon": "^3.0.1",
    "sinon": "^21.0.0",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "expense",
    "sharing",
    "dormitory",
    "accounting"
  ],
  "author": "Expense Sharing System Team",
  "license": "MIT"
}
