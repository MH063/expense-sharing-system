# 开发环境数据库配置（请通过外部注入敏感信息）
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=
DB_NAME=expense_dev

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT密钥（不在仓库存放真实密钥，开发请本地注入）
JWT_SECRETS=
JWT_REFRESH_SECRETS=
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS512

# 应用端口
PORT=4000

# 环境标识
NODE_ENV=development

# 开发环境放宽/禁用限流
API_RATE_LIMIT=1000
ENABLE_RATE_LIMITING=false
LOG_LEVEL=debug

# 安全增强配置（开发环境默认禁用）
ENABLE_REQUEST_SIGNATURE=false
API_SIGNING_SECRET=
SIGNATURE_SKEW_SECONDS=300
ENABLE_IP_WHITELIST=false
IP_WHITELIST=