# 测试环境配置文件
# 此文件用于自动化测试，使用测试专用数据库

# 当前环境标识
NODE_ENV=test

# 数据库配置 - 测试环境
DB_HOST=localhost
DB_PORT=5432
DB_USER=test_user
DB_PASSWORD=test_password_placeholder  # 在CI/CD环境或测试服务器上设置真实值
DB_NAME=expense_test

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT配置
JWT_SECRET=test_jwt_secret
JWT_REFRESH_SECRET=test_refresh_secret
JWT_EXPIRES_IN=1h

# 应用端口
PORT=4001

# 日志级别
LOG_LEVEL=error

# API速率限制（每分钟请求数）
API_RATE_LIMIT=1000

# 文件上传限制（MB）
MAX_FILE_SIZE=5

# 安全配置
ENABLE_CORS_ALL=true
ENABLE_RATE_LIMITING=true