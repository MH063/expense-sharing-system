{
  "name": "expense-sharing-system",
  "version": "1.0.0",
  "description": "寝室费用分摊记账系统",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "set NODE_ENV=development && nodemon server.js",
    "prod": "set NODE_ENV=production && node server.js",
    "test": "set NODE_ENV=test && jest",
    "test:watch": "set NODE_ENV=test && jest --watch",
    "test:coverage": "set NODE_ENV=test && jest --coverage",
    "test:db": "set NODE_ENV=test && jest --testPathPattern=database",
    "test:unit": "set NODE_ENV=test && jest --testPathPattern=unit",
    "test:integration": "set NODE_ENV=test && jest --testPathPattern=integration",
    "test:mocha": "set NODE_ENV=development && mocha tests/**/*.test.js",
    "create:testdb": "set NODE_ENV=test && node scripts/create-test-database.js",
    "init:testdb": "psql -U postgres -d test_expense_system -f scripts/init-test-database.sql",
    "init:proddb": "psql -U postgres -d prod_expense_system -f scripts/init-prod-database.sql",
    "zeabur:init": "node scripts/zeabur-init.js",
    "zeabur:deploy": "npm run zeabur:init && npm start"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-validator": "^7.3.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "pg": "^8.11.3",
    "redis": "^4.6.7",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "twilio": "^5.10.4",
    "winston": "^3.10.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "chai": "^4.3.7",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "expense",
    "sharing",
    "dormitory",
    "accounting"
  ],
  "author": "Expense Sharing System Team",
  "license": "MIT"
}
